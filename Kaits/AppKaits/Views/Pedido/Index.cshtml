@model IEnumerable<Entidad.PedidoEN>

@{
    ViewBag.Title = "Pedido";
}

<p>
    @Html.ActionLink("Nuevo Pedido", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id_Pedido)
        </th>
        <th hidden="hidden">
            @Html.DisplayNameFor(model => model.Id_Cliente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cliente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha_Pedido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Total_Pedido)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id_Pedido)
            </td>
            <td hidden="hidden">
                @Html.DisplayFor(modelItem => item.Id_Cliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha_Pedido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total_Pedido)
            </td>
            <td>
                @*@Html.ActionLink("Editar", "Edit", new { id = item.Id_Pedido }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id_Pedido })*@
                <button type='button' class='btn btn-outline-danger eliminarPedido btn-sm' data-idpedido=@item.Id_Pedido>Eliminar</button>

            </td>
        </tr>
    }
</table>

<script src="~/JavaScript/Jsutilies.js"></script>
